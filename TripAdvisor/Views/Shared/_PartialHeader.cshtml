@{ 
    string nameApp = "Trip&Go";

    string emailPattern = "[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{1,3}$";

}

@*logo and button: review, register, login*@
<div class="container-sm">
    <div class="col-md-1">
        <div class="row">
            <a href="/Home"><img class="img-responsive" src="~/Content/Images/logoApp.png" alt="logo" /></a>
        </div>
        <div class="row">
            <a href="/Home" id="nameApp">@nameApp</a>
        </div>
    </div>
    <div class="col-md-4">
        <h1>Let's go travel</h1>
    </div>
    @*<div class="col-md-2 headerApp">
        <a href="#" class="btn btn-info btn-lg">
            <span class="glyphicon glyphicon-pencil"></span> Review
        </a>
    </div>*@
    <div class="col-md-2 headerApp">
        <a href="#" class="btn btn-info btn-lg" id="openLoginView" data-toggle="modal" data-target="#registerModal">
            <span class="glyphicon glyphicon-user"></span> Register
        </a>
    </div>
    <div class="col-md-3 headerApp">
        <a href="#" class="btn btn-info btn-lg" id="openLoginView" data-toggle="modal" data-target="#loginModal">
            <span class="glyphicon glyphicon-log-in"></span> Login
        </a>
    </div>
</div>

@*Login Modal*@
<div class="modal modalMyStyle fade" id="loginModal">
    <div class="modal-dialog dialogModalMyStyle" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align:center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    <img src="~/Content/Images/logoApp.png" alt="logo" /> Login to <span style="color: dodgerblue;font-weight:bold;">@nameApp</span>
                </h4>
            </div>
            <div class="modal-body">
                <div id="loginContent">
                    <div class="col-md-5">
                        <div class="row">
                            <p style="color: red;font-size:20px;">Continue with:</p>
                        </div>

                        <div class="row btn_social_myStyle">

                            <a class="btn btn-block btn-social btn-lg btn-facebook" onclick="_gaq.push(['_trackEvent', 'btn-social', 'click', 'btn-lg']);">
                                <i class="fa fa-facebook"></i> Facebook
                            </a>

                        </div>

                        <div class="row btn_social_myStyle">

                            <a class="btn btn-block btn-social btn-lg btn-google" onclick="_gaq.push(['_trackEvent', 'btn-social', 'click', 'btn-lg']);">
                                <i class="fa fa-google-plus"></i> Google
                            </a>
                        </div>

                        <div class="row btn_social_myStyle">
                            <button type="button" class="btn btn-block btn-social btn-lg btn-email" onclick="_gaq.push(['_trackEvent', 'btn-social', 'click', 'btn-lg']);">
                                <i class="fa fa-envelope left"></i> Email
                            </button>
                        </div>

                        <div class="row">
                            By proceeding, you agree to our <a href="#" target="blank">Privacy Policy</a> and <a href="#" target="blank">Terms of Use</a>
                        </div>

                    </div>@*left*@
                    <div class="col-md-1"></div>
                    <div class="col-md-6">

                        <div class="row">
                            <p style="color: red;font-size:20px;">Already a @nameApp member?</p>
                        </div>
                        <form action="" method="post">
                            <div class="row loginAccount">
                                User name: <input type="text" placeholder="Username" id="login_UserName" class="form-control" required />
                            </div>

                            <div class="row loginAccount">
                                Password: <input type="password" placeholder="Password" id="login_Pass" class="form-control" required />
                            </div>

                            <div class="row">
                                <a href="#" target="blank">Forgot password?</a>
                            </div>

                            <div class="row">
                                <a  href="/Home/HomePageLogin" type="submit" class="btn btn-default" id="loginBtn">
                                    <img src="~/Content/Images/login_icon.png" alt="login_icon" />
                                    <span style="margin-left:3%">Login</span>
                                </a>
                            </div>
                        </form>

                    </div>@*right*@
                </div>
            </div>

        </div>
    </div>
</div>

@*Register Modal*@
<div class="modal modalMyStyle fade" id="registerModal">
    <div class="modal-dialog dialogModalMyStyle" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align:center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    <img src="~/Content/Images/logoApp.png" alt="logo" /> Register to <span style="color: dodgerblue;font-weight:bold;">@nameApp</span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="container_register">
                    <div class="row">
                        <div class="col-md-12">
                            <p style="color: red;font-size:16px;">Register with</p>
                        </div>
                        <div class="col-md-4 btn_social_myStyle">

                            <a class="btn btn-block btn-social btn-lg btn-facebook" onclick="_gaq.push(['_trackEvent', 'btn-social', 'click', 'btn-lg']);">
                                <i class="fa fa-facebook"></i>Facebook
                            </a>

                        </div>

                        <div class="col-md-4 btn_social_myStyle">

                            <a class="btn btn-block btn-social btn-lg btn-google" onclick="_gaq.push(['_trackEvent', 'btn-social', 'click', 'btn-lg']);">
                                <i class="fa fa-google-plus"></i>Google
                            </a>
                        </div>

                        <div class="col-md-4 btn_social_myStyle">
                            <button type="button" class="btn btn-block btn-social btn-lg btn-email" onclick="_gaq.push(['_trackEvent', 'btn-social', 'click', 'btn-lg']);">
                                <i class="fa fa-envelope left"></i>Email
                            </button>
                        </div>

                    </div>@*left*@
                    <div class="row"></div>
                    <div class="row">
                        <form name="formRegister" method="get" action="">
                            <div class="col-md-12">
                                <p style="color: red;font-size:16px;">Register new account</p>
                            </div>
                            <input type="text" id="lastName" class="form-control" placeholder="Last name" required />

                            <input type="text" id="firstName" class="form-control" placeholder="First name" required />

                            <input type="email" placeholder="Email" id="email" class="form-control" pattern=@emailPattern required />

                            <input type="text" id="userName" placeholder="User name" class="form-control"/>

                            <input type="password" id="password" placeholder="Password" class="form-control" pattern=".{8,}" required />

                            <input type="password" id="passwordRe" placeholder="Confirm password" class="form-control" required />

                            <input type="submit" value="Register" id="registerBtn" class="btn btn-lg btn-primary btn-block" />
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
